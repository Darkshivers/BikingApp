<?xml version="1.0" encoding="utf-8"?>




<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bikeapp.bikingapp.MainActivity"
    android:clickable="true"
    android:theme="@style/Base.Theme.AppCompat.Light.Dialog"
    android:longClickable="false"
    android:showAsAction="always"
    android:iconifiedByDefault="false"
    android:clipToPadding="false"

    android:backgroundTint="@color/bright_foreground_inverse_material_dark"
    android:backgroundTintMode="screen"
    android:background="@color/colorPrimaryDark">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Explore"
        android:id="@+id/textView"
        android:textColor="@color/White"
        android:textSize="44dp"
        android:textIsSelectable="false"

        android:elevation="20dp"
        android:layout_above="@+id/searchView"
        android:layout_alignStart="@+id/searchView"
        android:layout_marginBottom="33dp" />

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:background="#dd9a9a9a"
        android:iconifiedByDefault="false"
        android:queryHint="PostCode"
        android:elevation="20dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set PostCode"
        android:id="@+id/txtTest"
        android:layout_alignTop="@+id/button"
        android:layout_alignStart="@+id/searchView"
        android:elevation="500dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        android:id="@+id/button"
        android:layout_below="@+id/searchView"
        android:layout_alignEnd="@+id/searchView"
        android:layout_marginTop="47dp"
        android:elevation="50dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GO BIKE"
        android:id="@+id/textView10"
        android:textColor="@color/White"
        android:textSize="70dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:typeface="serif" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show All"
        android:id="@+id/btnNext"
        android:layout_below="@+id/txtTest"
        android:layout_alignStart="@+id/txtTest" />

</RelativeLayout>
